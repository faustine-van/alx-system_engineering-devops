#!/usr/bin/env bash
# configure ubuntu server
sudo cp /etc/hosts /etc/hosts.old

sudo cp /etc/resolv.conf /etc/resolv.conf.backup

sudo tee /etc/resolv.conf > /dev/null <<EOL
nameserver 127.0.0.2
nameserver 8.8.8.8
EOL
# sudo sed -i 's/^127.0.0.1[[:space:]]localhost$/127.0.0.2 localhost/' /etc/hosts
# sudo sed -i '/^127.0.0.2[[:space:]]localhost$/! s/^127.0.0.2[[:space:]]*localhost$/&\n8.8.8.8 facebook.com/' /etc/hosts
